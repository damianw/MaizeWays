<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stops_drawer_item_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:padding="6dp">
    <Button
        android:id="@+id/stops_drawer_item_button"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/ic_ab_back_holo_dark_am_right"/>
    <TextView
        android:id="@+id/stops_drawer_item_text"
        android:layout_toLeftOf="@id/stops_drawer_item_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</RelativeLayout>